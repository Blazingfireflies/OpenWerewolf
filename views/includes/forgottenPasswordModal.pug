div(id='forgottenPasswordModal' class='ui modal column segment transition')
    div(class='header') Forgotten Password
    form(action="" id='forgottenPasswordForm' class='ui form' style='margin-top:10px')
        div(id="forgottenPasswordDimmer" class="ui dimmer inverted")
        label Would you like to reset your password? An email will be sent to your email address.
        br
        div(class='ui field' style='margin-top:24px')
            div(class='ui left icon input') 
                i(class='user icon') 
                input(id='forgottenPasswordUsername' name='username' placeholder='Username')
        div(id='forgottenPasswordError' class='ui error message')

        button(id='cancelForgottenPasswordButton' class='ui blue button' style='margin-top:20px') Cancel
        button(id='forgottenPasswordButton' class='ui red button' style='margin-top:20px' type='submit') Confirm
        

